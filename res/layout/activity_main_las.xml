    <LinearLayout
        android:id="@+id/xAxisLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp" >

        <TextView
            android:id="@+id/xAxisTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x-axis Linear Acceleration: " >
        </TextView>

        <TextView
            android:id="@+id/xAxisValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0" >
        </TextView>
    </LinearLayout>

    <SeekBar
        android:id="@+id/xAxisBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="20" />

    <LinearLayout
        android:id="@+id/yAxisLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/yAxisTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="y-axis Linear Acceleration: " >
        </TextView>

        <TextView
            android:id="@+id/yAxisValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0" >
        </TextView>
    </LinearLayout>

    <SeekBar
        android:id="@+id/yAxisBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="20" />

    <LinearLayout
        android:id="@+id/zAxisLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/zAxisTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="z-axis Linear Acceleration: " >
        </TextView>

        <TextView
            android:id="@+id/zAxisValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0" >
        </TextView>
    </LinearLayout>

    <SeekBar
        android:id="@+id/zAxisBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="20" />

    <CheckBox
        android:id="@+id/checkBoxSaveToFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Start Saving to file" />

    <TextView
        android:id="@+id/textView5"
        style="@style/littleTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Delay Rate:" >
    </TextView>

    <Spinner
        android:id="@+id/delayRateChooser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/delay_rate_spinner_prompt" >
    </Spinner>

</LinearLayout>