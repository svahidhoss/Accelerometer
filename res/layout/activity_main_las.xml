<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_las"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Earth Frame Of Reference"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/holo_red_dark" />

    <LinearLayout
        android:id="@+id/xAxisLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp" >

        <TextView
            android:id="@+id/xAxisTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x-axis Linear Acceleration: "
            android:textSize="16sp" >
        </TextView>

        <TextView
            android:id="@+id/xAxisValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="16sp" >
        </TextView>
    </LinearLayout>

    <!--
         <SeekBar
        android:id="@+id/xAxisBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="20" />
    -->

    <LinearLayout
        android:id="@+id/yAxisLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/yAxisTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="y-axis Linear Acceleration: "
            android:textSize="16sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/yAxisValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="16sp"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>

    <!--
         <SeekBar
        android:id="@+id/yAxisBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="20" />
    -->

    <LinearLayout
        android:id="@+id/zAxisLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/zAxisTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="z-axis Linear Acceleration: "
            android:textSize="16sp" >
        </TextView>

        <TextView
            android:id="@+id/zAxisValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="16sp" >
        </TextView>
    </LinearLayout>

    <!--
         <SeekBar
        android:id="@+id/zAxisBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="20" />
    -->

    <LinearLayout
        android:id="@+id/finalLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/finalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acceleration Mag.: "
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp" >
        </TextView>

        <TextView
            android:id="@+id/finalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp" >
        </TextView>
    </LinearLayout>

    <SeekBar
        android:id="@+id/finalBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Movement Frame Of Reference"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/holo_red_dark" />

    <LinearLayout
        android:id="@+id/xAxisTrueLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp" >

        <TextView
            android:id="@+id/xAxisTrueTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X-axis Linear Acceleration: "
            android:textSize="16sp" >
        </TextView>

        <TextView
            android:id="@+id/xAxisTrueValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="16sp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yAxisTrueLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp" >

        <TextView
            android:id="@+id/yAxisTrueTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y-axis Linear Acceleration: "
            android:textSize="16sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/yAxisTrueValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="16sp"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zAxisTrueLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp" >

        <TextView
            android:id="@+id/zAxisTrueTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z-axis Linear Acceleration: "
            android:textSize="16sp" >
        </TextView>

        <TextView
            android:id="@+id/zAxisTrueValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="16sp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rotationDegreeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp" >

        <TextView
            android:id="@+id/rotationDegreeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="True Bearing: "
            android:textSize="16sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/rotationDegreeeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="16sp"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <CheckBox
        android:id="@+id/checkBoxSaveToFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="onCheckboxClicked"
        android:text="@string/checkBoxSaveToFileInitialMsg" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/textView5"
        style="@style/littleTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Sensors Delay Rate:" >
    </TextView>

    <Spinner
        android:id="@+id/delayRateChooser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/delay_rate_spinner_prompt" >
    </Spinner>

</LinearLayout>